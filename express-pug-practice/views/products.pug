extends layout

block content
  a.btn.btn-info.card-link.mb-5.mt-3.btn-block(href='/products/new') Add new
  .row
    each product in products
      .col-4
        .card(style='width: 20rem;') 
          .card-header
            h5.card-title= product.name
          .card-body
            p.card-text Manufacturer: #{product.manufacturer}
            p.card-text Price: $#{product.price}
          .card-footer
           .btn-group
              a.btn.btn-secondary.card-link(href=`/products/edit/${product.id}`) Show
              a.btn.btn-danger.card-link(href=`/products/delete/${product.id}`) Delete
        br
